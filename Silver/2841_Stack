#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

/*
https://www.acmicpc.net/problem/2841
*/

int main(void)
{
	int flat_num, melody_num;															// 입력받을 음의 수와 기타 줄에 플랫의 개수
	int string, flat;																	// 치게 될 줄 번호와 플랫 번호
	int move_num = 0;																	// 음이 나기 위해 움직인 횟수
	int** flat_arr;																		// 기타 줄 스택
	int top[7];																			// 스택에 top
	flat_arr = (int**)malloc(sizeof(int*) * 7);											// 스택 동적 할당

	scanf("%d %d", &melody_num, &flat_num);												
	for (int i = 1; i < 7; i++)
	{
		flat_arr[i] = (int*)malloc(sizeof(int) * flat_num);								// 플랫 개수에 따라 동적 할당
		top[i] = -1;																	// 스택 초기화
	}
	for (int i = 0; i < melody_num; i++)
	{
		scanf("%d %d", &string, &flat);													
		while (top[string] != -1 && flat_arr[string][top[string]] > flat)				// 현재 줄에서 top 프렛이 새 프렛보다 크면 손 떼기(pop) 반복
		{
			top[string]--;
			move_num++;
		}
		if (top[string] != -1 && flat_arr[string][top[string]] == flat)					// 이미 같은 프렛을 누르고 있으면 아무 것도 안 함a
			continue;
		flat_arr[string][++top[string]] = flat;											// 비었거나 더 낮은 프랫이면 새로 누르기 (push)
		move_num++;
	}

	printf("%d", move_num);

	// 메모리 정리
	for (int i = 1; i <= 6; i++) 
		free(flat_arr[i]);
	free(flat_arr);
	return 0;
}
